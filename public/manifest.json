{
    "manifest_version": 2,
    "name": "DevLog",
    "description": "Log your daily development activities.",
    "version": "0.1",
    "icons": {
        "128": "images/logo128.png",
        "48": "images/logo48.png",
        "16": "images/logo16.png"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false

    },
    "browser_action": { },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+L",
                "mac": "Alt+L"
            },
            "description": "Opens index.html"
        }
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}